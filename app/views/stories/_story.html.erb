<% if story != nil %>
  <div class=story>
    <div id=title class=highlight-text
      <% if toggle_body %>
        onclick=archive.toggle()
      <% end %>>
      <% if toggle_body %>
        <div class=arrow-right></div>
      <% end %>
      <%= story.title %>
      <% if show_date %>
        <div class=date>
          - <%= story.pretty_date %>
        </div>
      <% end %>
    </div>
    <div <% if !add_underline %> id=last-story <% end %> class=story-body>
      <% if story.body != nil %>
        <div class=story-content
            <% if toggle_body %>
              style='display:none'
            <% end %>>
          <%= story.body.gsub(/\n/, '<br/>').html_safe %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
