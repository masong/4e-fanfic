<div id=participants-bar>
  <h3 id=participants-header>
    Participants
  </h3>
  <div id=reg-users>
    <% if story %>
      <% for user in story.get_registered_users %>
        <% if user != '' %>
          <%= user %>
          <% if is_current_user?(user) %>
            (<%= link_to 'deregister', {:action => 'deregister', :controller => 'stories'}, :id => 'dereg-link' %>)
          <% end %>
          <br />
        <% end %>
      <% end %>
      <% if !story.is_registered?(username) %>
        <%= link_to 'register', {:controller => 'stories', :action => 'register'}, :id => 'reg-link' %>
      <% end %>
    <% end %>
  </div>
</div>
