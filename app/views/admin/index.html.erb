<span class=admin-header>Manage Existing Fanfics</span>
<br />
<div class=admin-subsection>
  <% for story in Story.all.find_all { |s| s.visible } %>
    <div class='admin-title'> <%= story.title %></div>, <%= story.pretty_date %> 
    <span class='admin-action'>
      <% if story.is_active %>
        <%= link_to 'Deactivate', :id => story.id, :controller => 'admin', :action => 'deactivate_story' %>
      <% else %>
        <%= link_to 'Activate', :id => story.id, :action => 'activate_story', :controller => 'admin' %> 
      <% end %>
    </span>
    <span class='admin-action'>
      <%= link_to 'Delete', :id => story.id, :controller => 'admin', :action => 'hide_story' %>
    </span>
    <br />
  <% end %>
</div>
<br />
<span class=admin-header>Create a New Fanfic</span>
<div class=admin-subsection>
  <%= render 'stories/new' %>
</div>
